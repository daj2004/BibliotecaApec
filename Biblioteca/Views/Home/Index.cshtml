@model BibliotecaUNAPEC.Models.HomeIndexViewModel

@{
    ViewData["Title"] = "Inicio - Biblioteca UNAPEC";
}

<div class="container py-4">
    <div class="text-center mb-4">
        <h1 class="fw-bold display-6">📚 Sistema de Gestión de Biblioteca UNAPEC</h1>
        <p class="text-muted mb-0">Selecciona un módulo para continuar:</p>
    </div>

    <div class="row g-3 justify-content-center">
        <div class="col-md-3 col-sm-6">
            <a class="btn btn-primary w-100" href="/TiposBibliografia">📖 Tipos de Bibliografía</a>
        </div>
        <div class="col-md-3 col-sm-6">
            <a class="btn btn-primary w-100" href="/Editoras">🏢 Editoras</a>
        </div>
        <div class="col-md-3 col-sm-6">
            <a class="btn btn-primary w-100" href="/Ciencias">🔬 Ciencias</a>
        </div>
        <div class="col-md-3 col-sm-6">
            <a class="btn btn-primary w-100" href="/Idiomas">🌍 Idiomas</a>
        </div>
    </div>

    <div class="row g-3 justify-content-center mt-2">
        <div class="col-md-3 col-sm-6">
            <a class="btn btn-success w-100" href="/Autores">✍️ Autores</a>
        </div>
        <div class="col-md-3 col-sm-6">
            <a class="btn btn-success w-100" href="/Libros">📚 Libros</a>
        </div>
        <div class="col-md-3 col-sm-6">
            <a class="btn btn-success w-100" href="/Usuarios">👥 Usuarios</a>
        </div>
        <div class="col-md-3 col-sm-6">
            <a class="btn btn-success w-100" href="/Empleados">👨‍💼 Empleados</a>
        </div>
    </div>

    <div class="row g-3 justify-content-center mt-2">
        <div class="col-md-6 col-sm-12">
            <a class="btn btn-warning w-100" href="/Prestamos">📗 Préstamos y Devoluciones</a>
        </div>
        <div class="col-md-6 col-sm-12">
            <a class="btn btn-info w-100" href="/Reportes">📊 Reportes</a>
        </div>
    </div>

    <div class="text-center mt-4">
        <a href="/Home/AcercaDe" class="btn btn-outline-secondary">
            ℹ️ Acerca de
        </a>
    </div>

    <hr class="my-4">

    <div class="row mb-3">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Resumen</h5>
                    <p>Total libros: <strong>@Model.TotalLibros</strong></p>
                    <p>Total usuarios: <strong>@Model.TotalUsuarios</strong></p>
                    <p>Préstamos activos: <strong>@Model.TotalPrestamosActivos</strong></p>
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <form method="get" class="row g-2">
                <div class="col-md-6">
                    <input type="text" name="search" value="@Model.Search" placeholder="Buscar libro, ISBN o signatura" class="form-control" />
                </div>
                <div class="col-md-3">
                    <select name="cienciaId" class="form-select">
                        <option value="">Todas las ciencias</option>
                        @foreach (var c in Model.Ciencias)
                        {
                            <option value="@c.Id" selected="@(Model.CienciaId == c.Id ? "selected" : null)">@c.Descripcion</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <select name="sort" class="form-select">
                        <option value="">Orden</option>
                        <option value="titulo_asc" selected="@(Model.Sort == "titulo_asc" ? "selected" : "")">Título ↑</option>
                        <option value="titulo_desc" selected="@(Model.Sort == "titulo_desc" ? "selected" : "")">Título ↓</option>
                        <option value="anyo_desc" selected="@(Model.Sort == "anyo_desc" ? "selected" : "")">Año ↓</option>
                        <option value="anyo_asc" selected="@(Model.Sort == "anyo_asc" ? "selected" : "")">Año ↑</option>
                    </select>
                </div>
                <div class="col-12 mt-2">
                    <button class="btn btn-primary">Buscar</button>
                </div>
            </form>
        </div>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Descripción</th>
                <th>Signatura</th>
                <th>ISBN</th>
                <th>Ciencia</th>
                <th>Idioma</th>
                <th>Año</th>
                <th>Estado</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var libro in Model.UltimosLibros)
            {
                <tr>
                    <td>@libro.Descripcion</td>
                    <td>@libro.SignaturaTopografica</td>
                    <td>@libro.ISBN</td>
                    <td>@libro.Ciencia?.Descripcion</td>
                    <td>@libro.Idioma?.Descripcion</td>
                    <td>@libro.AñoPublicacion</td>
                    <td>@libro.Estado</td>
                    <td>
                        <a asp-controller="Libros" asp-action="Edit" asp-route-id="@libro.Id">Editar</a> |
                        <a asp-controller="Libros" asp-action="Details" asp-route-id="@libro.Id">Detalles</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Paginación">
            <ul class="pagination">
                @for (int p = 1; p <= Model.TotalPages; p++)
                {
                    <li class="page-item @(p == Model.Page ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-search="@Model.Search"
                           asp-route-cienciaId="@Model.CienciaId"
                           asp-route-sort="@Model.Sort"
                           asp-route-page="@p"
                           asp-route-pageSize="@Model.PageSize">@p</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>
