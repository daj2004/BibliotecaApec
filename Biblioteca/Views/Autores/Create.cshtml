@model BibliotecaUNAPEC.Models.Autor

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear autor</h1>

<h4>Autor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PaisOrigen" class="control-label"></label>
                <input asp-for="PaisOrigen" class="form-control" />
                <span asp-validation-for="PaisOrigen" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IdiomaNativoId" class="control-label"></label>
                <select asp-for="IdiomaNativoId" class="form-select" asp-items="ViewBag.IdiomaNativoId">
                    <option value="0">-- Seleccione idioma --</option>
                </select>
                <span asp-validation-for="IdiomaNativoId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Estado" class="control-label"></label>
                @Html.EditorFor(m => m.Estado, "Estado")
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

