@model BibliotecaUNAPEC.Models.Empleado

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear empleado</h1>

<h4>Empleado</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Cedula" class="control-label"></label>
                <input asp-for="Cedula" class="form-control" />
                <span asp-validation-for="Cedula" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TandaLaboral" class="control-label"></label>
                <input asp-for="TandaLaboral" class="form-control" />
                <span asp-validation-for="TandaLaboral" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PorcentajeComision" class="control-label"></label>
                <input asp-for="PorcentajeComision" class="form-control" />
                <span asp-validation-for="PorcentajeComision" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="FechaIngreso" class="control-label"></label>
                <input asp-for="FechaIngreso" class="form-control" />
                <span asp-validation-for="FechaIngreso" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Estado" class="control-label"></label>
                @Html.EditorFor(m => m.Estado, "Estado")
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

