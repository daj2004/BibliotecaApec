@model BibliotecaUNAPEC.Models.Libro

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear libro</h1>

<h4>Libro</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="invalid-feedback d-block"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SignaturaTopografica" class="form-label"></label>
                <input asp-for="SignaturaTopografica" class="form-control" />
                <span asp-validation-for="SignaturaTopografica" class="invalid-feedback d-block"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ISBN" class="form-label"></label>
                <input asp-for="ISBN" class="form-control" />
                <span asp-validation-for="ISBN" class="invalid-feedback d-block"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TipoBibliografiaId" class="form-label"></label>
                <select asp-for="TipoBibliografiaId" class="form-select" asp-items="ViewBag.TipoBibliografiaId">
                    <option value="0">-- Seleccione tipo --</option>
                </select>
                <span asp-validation-for="TipoBibliografiaId" class="invalid-feedback d-block"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EditoraId" class="form-label"></label>
                <select asp-for="EditoraId" class="form-select" asp-items="ViewBag.EditoraId">
                    <option value="0">-- Seleccione editora --</option>
                </select>
                <span asp-validation-for="EditoraId" class="invalid-feedback d-block"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CienciaId" class="form-label"></label>
                <select asp-for="CienciaId" class="form-select" asp-items="ViewBag.CienciaId">
                    <option value="0">-- Seleccione ciencia --</option>
                </select>
                <span asp-validation-for="CienciaId" class="invalid-feedback d-block"></span>
            </div>

            <div class="mb-3">
                <label asp-for="IdiomaId" class="form-label"></label>
                <select asp-for="IdiomaId" class="form-select" asp-items="ViewBag.IdiomaId">
                    <option value="0">-- Seleccione idioma --</option>
                </select>
                <span asp-validation-for="IdiomaId" class="invalid-feedback d-block"></span>
            </div>

            <div class="mb-3">
                <label asp-for="AñoPublicacion" class="form-label"></label>
                <input asp-for="AñoPublicacion" type="number" min="1500" max="2100" class="form-control" />
                <span asp-validation-for="AñoPublicacion" class="invalid-feedback d-block"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Estado" class="form-label"></label>
                <select asp-for="Estado" class="form-select">
                    <option value="A">Activo</option>
                    <option value="I">Inactivo</option>
                </select>
                <span asp-validation-for="Estado" class="invalid-feedback d-block"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Crear</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Volver a la lista</a>
</div>

